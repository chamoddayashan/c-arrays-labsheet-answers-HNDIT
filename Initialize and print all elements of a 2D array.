#include<iostream>
#define size 16
using namespace std;
int main()
{
   int m,n;
   int a[size][size];


   cout<<"enter the number of rows"<<endl;
   cin>>m;
   cout<<"enter the number of columns"<<endl;
   cin>>n;

   cout<<"input the numbers into 2d array"<<endl;

   for(int i=0;i<m;i++)
   {
     for(int j=0;j<n;j++)
   {
    cin>>a[i][j];
   }
   }
   for(int i=0;i<m;i++)
   for(int j=0;j<n;j++)
   {
     cout<<"a["<<i<<"]["<<j<<"]:";
     cout<<a[i][j]<<endl;
   }

        return 0;
}
